{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    <div class="card-deck">
{% for groupe in groupes %}
    <div class="card col-md-4" style="min-width: 160px">
        <img class="card-img-top" src="{{ groupe.image }}" alt="Card image cap">
        <div class="card-body">
            <h3 class="card-title">{{ groupe.name }}</h3>
            <p class="card-text">{{ groupe.description }}</p>
        </div>
    </div>
{% endfor %}
    </div>
{% endblock %}
